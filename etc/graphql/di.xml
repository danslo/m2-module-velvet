<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Danslo\Velvet\Model\Resolver\Dashboard\Chart\Orders" type="Danslo\Velvet\Model\Resolver\Dashboard\Chart">
        <arguments>
            <argument name="chartParam" xsi:type="string">quantity</argument>
            <argument name="label" xsi:type="string">Quantity</argument>
        </arguments>
    </virtualType>
    <virtualType name="Danslo\Velvet\Model\Resolver\Dashboard\Chart\Revenue" type="Danslo\Velvet\Model\Resolver\Dashboard\Chart">
        <arguments>
            <argument name="chartParam" xsi:type="string">revenue</argument>
            <argument name="label" xsi:type="string">Revenue</argument>
        </arguments>
    </virtualType>

    <virtualType name="Danslo\Velvet\Model\Resolver\Dashboard\SearchTerms\Last" type="Danslo\Velvet\Model\Resolver\Dashboard\SearchTerms">
        <arguments>
            <argument name="recentFilter" xsi:type="boolean">true</argument>
        </arguments>
    </virtualType>

    <virtualType name="Danslo\Velvet\Model\Resolver\Dashboard\SearchTerms\Top" type="Danslo\Velvet\Model\Resolver\Dashboard\SearchTerms">
        <arguments>
            <argument name="popularFilter" xsi:type="boolean">true</argument>
        </arguments>
    </virtualType>

    <type name="Danslo\Velvet\Model\Resolver\Order\Grid\EntityTransformer">
        <arguments>
            <argument name="currencyFormatFields" xsi:type="array">
                <item name="grand_total" xsi:type="string">grand_total</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="Danslo\Velvet\Model\Resolver\Order\Grid" type="Danslo\Velvet\Model\Resolver\Grid">
        <arguments>
            <argument name="defaultOrderField" xsi:type="string">created_at</argument>
            <argument name="entityTransfer" xsi:type="object">
                Danslo\Velvet\Model\Resolver\Order\Grid\EntityTransformer
            </argument>
            <argument name="schemaType" xsi:type="string">GridOrder</argument>
            <argument name="collectionFactoryType" xsi:type="string">Magento\Sales\Model\ResourceModel\Order\Grid\CollectionFactory</argument>
        </arguments>
    </virtualType>

    <virtualType name="Danslo\Velvet\Model\Resolver\Cms\Page\Grid" type="Danslo\Velvet\Model\Resolver\Grid">
        <arguments>
            <argument name="defaultOrderField" xsi:type="string">creation_time</argument>
            <argument name="schemaType" xsi:type="string">GridCmsPage</argument>
            <argument name="collectionFactoryType" xsi:type="string">Magento\Cms\Model\ResourceModel\Page\Grid\CollectionFactory</argument>
        </arguments>
    </virtualType>

    <virtualType name="Danslo\Velvet\Model\Resolver\Cms\Block\Grid" type="Danslo\Velvet\Model\Resolver\Grid">
        <arguments>
            <argument name="defaultOrderField" xsi:type="string">creation_time</argument>
            <argument name="schemaType" xsi:type="string">GridCmsBlock</argument>
            <argument name="collectionFactoryType" xsi:type="string">Magento\Cms\Model\ResourceModel\Block\Grid\CollectionFactory</argument>
        </arguments>
    </virtualType>

    <virtualType name="Danslo\Velvet\Model\Resolver\Customer\Grid" type="Danslo\Velvet\Model\Resolver\Grid">
        <arguments>
            <argument name="defaultOrderField" xsi:type="string">created_at</argument>
            <argument name="schemaType" xsi:type="string">GridCustomer</argument>
            <argument name="collectionFactoryType" xsi:type="string">Magento\Customer\Model\ResourceModel\Grid\CollectionFactory</argument>
        </arguments>
    </virtualType>

    <type name="Magento\Framework\GraphQl\Query\ResolverInterface">
        <plugin name="Danslo_Velvet::admin_authorization" type="Danslo\Velvet\Plugin\AdminAuthorizationPlugin" />
    </type>

    <virtualType name="Danslo\Velvet\Model\Resolver\Entity\CmsBlock" type="Danslo\Velvet\Model\Resolver\Entity\Loader">
        <arguments>
            <argument name="entityFactory" xsi:type="string">Magento\Cms\Model\BlockFactory</argument>
            <argument name="resourceModel" xsi:type="object">Magento\Cms\Model\ResourceModel\Block</argument>
        </arguments>
    </virtualType>

    <!-- Duplicated from module-config/etc/adminhtml/di.xml due to different area. -->
    <preference for="Magento\Config\Model\Config\Backend\File\RequestData\RequestDataInterface" type="Magento\Config\Model\Config\Backend\File\RequestData" />
    <preference for="Magento\Config\Model\Config\Structure\ElementVisibilityInterface" type="Magento\Config\Model\Config\Structure\ElementVisibilityComposite" />
    <type name="Magento\Config\Model\Config\Structure\Element\Iterator\Tab" shared="false" />
    <type name="Magento\Config\Model\Config\Structure\Element\Iterator\Section" shared="false" />
    <type name="Magento\Config\Model\Config\Structure\ElementVisibilityComposite">
        <arguments>
            <argument name="visibility" xsi:type="array">
                <item name="productionVisibility" xsi:type="object">Magento\Config\Model\Config\Structure\ConcealInProductionConfigList</item>
                <item name="concealInProduction" xsi:type="object">Magento\Config\Model\Config\Structure\ElementVisibility\ConcealInProduction</item>
                <item name="concealInProductionWithoutScdOnDemand" xsi:type="object">Magento\Config\Model\Config\Structure\ElementVisibility\ConcealInProductionWithoutScdOnDemand</item>
            </argument>
        </arguments>
    </type>
    <!-- /end -->
</config>
